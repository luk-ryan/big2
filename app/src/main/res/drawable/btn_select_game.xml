<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- SHADOW LAYER -->
    <item android:left="2dp" android:top="4dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#b1560f" />
            <corners android:radius="30dp" />
        </shape>
    </item>

    <!-- MAIN BUTTON LAYER -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFA726"
                android:endColor="#F57C00"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#d8700a" />
            <corners android:radius="30dp" />
        </shape>
    </item>

</layer-list>
