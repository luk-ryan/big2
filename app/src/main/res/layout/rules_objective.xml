<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/objectiveScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/titleObjective"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Objective"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="8dp" />

            <!-- Overall Objective -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overall: Have the lowest cumulative score at the end of the game."
                android:textSize="16sp"
                android:textColor="#444444"
                android:layout_marginBottom="8dp" />

            <!-- Every Round Objective -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Every Round: Be the first player to play all your cards."
                android:textSize="16sp"
                android:textColor="#444444"
                android:layout_marginBottom="16dp" />

            <!-- Setup Section -->
            <TextView
                android:id="@+id/titleSetup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setup"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Players: 4\n• Deck: Standard 52-card deck (no jokers)."
                android:textSize="16sp"
                android:textColor="#444444"
                android:layout_marginBottom="8dp" />

            <!-- Card Ranking -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Card Ranking:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#444444"
                android:layout_marginBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Suits (ascending): Diamonds &lt; Clubs &lt; Hearts &lt; Spades&#10;• Ranks (ascending): 3 &lt; 4 &lt; 5 &lt; ... &lt; K &lt; A &lt; 2 (2 is highest)"
                android:textSize="16sp"
                android:textColor="#444444" />

        </LinearLayout>
    </ScrollView>

    <!-- Back Button -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>